# exa for pretty ls
alias ll='exa -laa --header --icons --git --octal-permissions --group'
alias l='exa -laa --header --icons --git --octal-permissions --no-permissions'
alias la='ll --accessed --modified --created --extended'
alias lg='exa -la --header --icons --git --no-permissions --no-time --no-user --no-filesize --grid'
alias ld='exa -laa --header --icons --git --group --only-dirs'
alias lt='exa -T --icons'
alias lt2='exa -T --icons --level 2'
alias lt3='exa -T --icons --level 3'

